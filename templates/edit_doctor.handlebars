<body style="background-color: rgb(243, 236, 236);">
    <div style="padding: 50px 200px; ">
      
    <form action="/doctors/{{subject._id}}?_method=PUT"  method="post">
    <div class="form-group">
      <h2>Edit: {{doctor.name}}</h2>
  <label for="usr" style="padding: 30px 0px;">Name:</label>
  <input type="text" class="form-control" id="usr" name="name">
</div>
<div class="form-group">
  <label for="usr" style="padding: 30px 0px;">Code:</label>
  <input type="number" class="form-control" id="usr" name="code">
</div>
<div class="form-group">
  <label for="usr" style="padding: 30px 0px;">Explained_Subject:</label>
    <select  name="explained_subject" id="usr"  class="form-select"   >
       {{#each subjects}}
          <option value="{{_id}}" > {{name}} </option>
       {{/each}}
    </select>
</div>

<button type="submit"  style="margin: 20px 100px 20px 0px; background-color:rgb(0, 0, 0); color:beige; padding:10px 20px;" >Add</button>
</form>
</div>
